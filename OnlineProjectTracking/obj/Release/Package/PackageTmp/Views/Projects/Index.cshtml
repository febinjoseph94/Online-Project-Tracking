@model IEnumerable<OnlineProjectTracking.DAL.Project>
@{
    ViewBag.Title = "All Projects";
}
<div class="row" style="margin-top:30px;">
    <h4 style="float:left;margin-left:20px;">View All Projects</h4>
    <a href="@Url.Action("AddNewProject")" class="btn btn-primary" style="float:right;margin-right:20px;">Add New Project</a>
</div>
<hr />
<table class="table table-striped table-hover">
    <tr class="info">
        <th>Client Name</th>
        <th>Project Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr class="success">
        <td>
            @Html.DisplayFor(modelItem => item.ClientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProject", new { id = item.ProjectID })
        </td>
    </tr>
    }
</table>
