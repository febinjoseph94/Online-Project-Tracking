@model IEnumerable<OnlineProjectTracking.DAL.UserStory>
@{
    ViewBag.Title = "User Stories";
}
<div class="row" style="margin-top:30px;">
    <h4 style="float:left;margin-left:20px;">View All Stories</h4>
    <a href="@Url.Action("AddNewStory")" class="btn btn-primary" style="float:right;margin-right:20px;">Add New Story</a>
</div>
<hr />
<table class="table table-striped table-hover">
    <tr class="info">
        <th>Project Name</th>
        <th>Client Name</th>
        <th>Story</th>
        <th>Acceptance Criteria</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr class="success">
        <td>
            @Html.DisplayFor(modelItem => item.Project.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.ClientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Story)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AcceptanceCriteria)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditStory", new { id = item.UserStoryID })
        </td>
    </tr>
    }
</table>
